<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MembershipFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup
                android:id="@+id/plan_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="20dp"
                android:gravity="center">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/plan_first"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text5"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="PAID PLAN- "
                        android:textColor="@color/main_color"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/plan_first"
                        app:layout_constraintLeft_toRightOf="@id/plan_first"
                        app:layout_constraintTop_toTopOf="@id/plan_first" />

                    <TextView
                        android:id="@+id/plan_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/button1"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@id/text5"
                        app:layout_constraintLeft_toRightOf="@id/text5"
                        app:layout_constraintTop_toTopOf="@id/text5" />

                    <TextView
                        android:id="@+id/text7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get Daily Detailed Answer Sheet of 22 Monthly Practice Test."
                        android:textSize="12sp"
                        android:translationY="-10dp"
                        app:layout_constraintLeft_toLeftOf="@id/text5"
                        app:layout_constraintTop_toBottomOf="@id/text5" />

                    <TextView
                        android:id="@+id/text8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get Daily 500 + Questions, Subject Wise for Practice."
                        android:textSize="12sp"
                        android:translationY="-10dp"
                        app:layout_constraintLeft_toLeftOf="@id/text7"
                        app:layout_constraintTop_toBottomOf="@id/text7" />

                    <!--                    <TextView-->
                    <!--                        android:id="@+id/text9"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:text="Get Subject Wise Revision of All subjects."-->
                    <!--                        android:textSize="12sp"-->
                    <!--                        android:translationY="-10dp"-->
                    <!--                        app:layout_constraintLeft_toLeftOf="@id/text8"-->
                    <!--                        app:layout_constraintTop_toBottomOf="@id/text8" />-->

                    <TextView
                        android:id="@+id/text91"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="[HARYANA GK, NATIONAL GK, Science, Computer, English, Hindi, Maths, Reasoning &amp; Subject Specific]"
                        android:textSize="12sp"
                        android:translationY="-10dp"
                        app:layout_constraintLeft_toLeftOf="@id/text8"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text8" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </RadioGroup>
            <Button
                android:id="@+id/buy_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/button1"
                android:gravity="center"
                android:text="Buy Now"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/plan_group" />

            <Button
                android:id="@+id/nav_mainpage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.5dp"
                android:gravity="center"
                android:text="BACK TO MAIN PAGE"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:backgroundTint="@color/button2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buy_now" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>