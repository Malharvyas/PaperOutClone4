                android:text="Practice more than 500 unique questions daily."
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text8"
                android:textSize="12sp"
                android:id="@+id/text9"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Detailed Answersheet of Daily Practice Set."
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text9"
                android:textSize="12sp"
                android:id="@+id/text10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn and Revise all practice sets."
