<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/bg_color">

    <ImageView
        android:id="@+id/circle_img"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:src="@drawable/pdf_icon"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    <TextView-->
<!--        android:id="@+id/pdf_number"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:textColor="@color/white"-->
<!--        android:textSize="22sp"-->
<!--        app:layout_constraintBottom_toBottomOf="@id/circle_img"-->
<!--        app:layout_constraintLeft_toLeftOf="@id/circle_img"-->
<!--        app:layout_constraintRight_toRightOf="@id/circle_img"-->
<!--        app:layout_constraintTop_toTopOf="@id/circle_img" />-->

    <TextView
        android:id="@+id/pdf_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="15dp"
        android:autoSizeMaxTextSize="22sp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:minLines="1"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/circle_img"
        app:layout_constraintRight_toLeftOf="@id/pdf_date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pdf_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15sp"
        android:autoSizeMaxTextSize="22sp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:minLines="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/pdf_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:textSize="16sp"
        android:translationY="-5dp"
        app:layout_constraintLeft_toRightOf="@id/circle_img"
        app:layout_constraintTop_toBottomOf="@id/pdf_name" />


</androidx.constraintlayout.widget.ConstraintLayout>